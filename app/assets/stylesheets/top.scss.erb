.main-container {
  background-image: url("<%= asset_path('top.jpg') %>");
  max-width: 100%;
  height: 800px;
  position: relative;
  background-position: center;
  background-size: 100% auto;

  .top-title h1 {
    position: absolute; 
    top: 400px;
    left: 60px;
    width: auto;
    text-align: center;
    font-size: 8rem;
    color: white;
  }

  .top-inner-text {
    position: right; 
    width: auto;
    text-align: right;
    font-size: 1.5rem;
    color: white;
  }
}